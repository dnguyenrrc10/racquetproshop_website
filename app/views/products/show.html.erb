<div class="card">
  <div class="section-header">
    <h1><%= @product.name %></h1>
    <p class="section-subtitle">
      Detailed view for this product.
    </p>
  </div>

  <p class="text-muted">
    Category: <strong><%= @product.category&.name %></strong>
  </p>

  <p>
  <strong>Price:</strong>
  <%= display_price(@product) %>
  <%= product_badges(@product) %>
</p>


  <div class="mt-2">
    <strong>Description</strong>
    <p><%= simple_format(@product.description) %></p>
  </div>

  <div class="mt-3">
    <%= button_to "Add to cart",
                  add_to_cart_path(@product),
                  method: :post,
                  class: "btn btn-primary" %>

    <%= link_to "Back to category",
                @product.category ? category_path(@product.category) : products_path,
                class: "btn btn-secondary btn-small" %>

    <%= link_to "All products",
                products_path,
                class: "btn btn-secondary btn-small" %>
  </div>
</div>
