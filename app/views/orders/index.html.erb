<h1>My Orders</h1>

<% if @orders.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Order #</th>
        <th>Date</th>
        <th>Items</th>
        <th>Tax</th>
        <th>Grand Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= order.order_items.sum(:quantity) %></td>
          <td><%= number_to_currency(order.tax_amount) %></td>
          <td><%= number_to_currency(order.grand_total) %></td>
          <td><%= link_to "View", order_path(order), class: "btn btn-sm btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no past orders.</p>
<% end %>
