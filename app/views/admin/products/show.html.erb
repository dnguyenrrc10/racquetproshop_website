<div class="card">
  <div class="section-header">
    <h1><%= @product.name %></h1>
    <p class="section-subtitle">
      Admin view for a single product.
    </p>
  </div>

  <p>
    <strong>Category:</strong>
    <%= @product.category&.name || "None" %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(@product.current_price) %>
  </p>

  <p>
    <strong>Description:</strong><br>
    <%= simple_format(@product.description) %>
  </p>

  <div class="mt-3">
    <%= link_to "Edit", edit_admin_product_path(@product), class: "btn btn-secondary" %>
    <%= link_to "Back to products", admin_products_path, class: "btn btn-primary" %>
  </div>
</div>
